import java.util.Scanner;
public class Solution {

	public static void main(String[] args) {
	
        Scanner s = new Scanner(System.in);
        
        int n = s.nextInt();
        
        int i = 1;
        
        while(i<=n){
            
            
            int j = 1;
            
            while(j<=2*n+1){
                
                if(j==n+1 || i==j || i+j == 2*n+2){
                    System.out.print("*");
                }else{
                    System.out.print("0");
                }
                
                j++;
            }
            
            
            System.out.println();
            
            i++;
        }
		
	}	


}
